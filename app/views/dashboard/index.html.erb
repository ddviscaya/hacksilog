<main id="main">
  <!--==========================
    Services Section
  ============================-->
  <div class="container">
    <div class="row">
      <div class="col-4" style="padding: 0 !important;">
        <img src="https://image.freepik.com/free-vector/funny-corgi-dog-paws-up-white-wall_42750-483.jpg" style="width: 130px;">
      </div>
      <div class="col-8">
        <h4 style="font-family: 'Montserrat', sans-serif; font-size: 16px; color: gray; padding-top: 20px; text-transform: uppercase;"><%= @pet_name %></h4>
        <div class="row align-items-center">
          <div class="col-1" style="padding: 0 !important; margin-right: 3px;">
            <img src="https://img.icons8.com/color/64/000000/like.png" width="20px" style="margin-top: -3px;">
          </div>
          <div class="col-10" style="padding: 0 !important;">
            <div class="progress">
              <div class="progress-bar" style="width: <%= @heart_progress %>%; background-color: #FECDD3"></div>
            </div>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-1" style="padding: 0 !important; margin-right: 3px;">
            <img src="https://img.icons8.com/color/48/000000/smiling.png" width="20px" style="margin-top: -3px;">
          </div>
          <div class="col-10" style="padding: 0 !important;">
            <div class="progress">
              <div class="progress-bar" style="width: <%= @happiness_progress %>%; background-color: #FFE192"></div>
            </div>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-1" style="padding: 0 !important; margin-right: 3px;">
            <img src="https://img.icons8.com/flat_round/64/000000/star.png" width="20px" style="margin-top: -3px;">
          </div>
          <div class="col-10" style="padding: 0 !important;">
            <div class="progress">
              <div class="progress-bar" style="width: <%= @star_progress %>%; background-color: #E4AA19"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section id="services" class="section-bg" style="padding-top: 30 px;">
    <div class="container" style="padding-bottom: 40px;">
      <header class="section-header mb-5">
        <div class="row align-items-center">
          <div class="col text-center">
            <h5 style="font-size: 14px; color: lightgray;"><%= @prev_day %></h5>
            <h6 style="color: lightgray; font-size: 12px;"><%= @prev_date.strftime("%B %d") %></h6>
          </div>
          <div class="col text-center">
            <h5><%= @current_day %></h5>
            <h6 style="color: gray;"><%= @current_date.strftime("%B %d") %></h6>
          </div>
          <div class="col text-center">
            <h5 style="font-size: 14px; color: lightgray;"><%= @next_day %></h5>
            <h6 style="color: lightgray; font-size: 12px;"><%= @next_date.strftime("%B %d") %></h6>
          </div>
        </div>
      </header>

      <% if DailyTask.count.zero? %>
        <div class="container" style="padding: 10px 0;">
          <center class="wow bounceInUp" style="color: #7689BC"  data-wow-duration="1.4s">
            <img src="https://assets-ouch.icons8.com/preview/961/ceb5fe11-ef17-4d93-880b-650c9392855f.png" style="width: 250px;">
